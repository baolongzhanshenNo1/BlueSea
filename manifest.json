{
  "name": "BlueSea",
  "description": "BlueSea英语学习扩展程序",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.dictionaryapi.dev/*",
    "https://ssl.gstatic.com/*",
    "https://lex-audio.useremarkable.com/*",
    "https://translate.googleapis.com/*",
    "https://api.mymemory.translated.net/*",
    "https://dict.youdao.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker-unified.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "lib/dayjs.js",
        "lib/standalone.module.mini.js",
        "lib/webcomponents-sd-ce.js",
        "logic.js",
        "content_scripts/tip.js",
        "content_scripts/highlighter.js",
        "content_scripts/selection.js"
      ],
      "css": ["content_scripts/selection.css"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content_scripts/d-loading.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
